<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <include layout="@layout/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250sp"
                android:src="@drawable/banana"
                android:scaleType="centerCrop"
                android:layout_margin="15sp"
                android:id="@+id/banana_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/banana"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/banana_text"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250sp"
                android:src="@drawable/green_apple"
                android:scaleType="centerCrop"
                android:layout_margin="15sp"
                android:id="@+id/apple_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apple"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/apple_text"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250sp"
                android:src="@drawable/orange"
                android:scaleType="centerCrop"
                android:layout_margin="15sp"
                android:id="@+id/orange_image"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/orange"
                android:textSize="40sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/orange_text"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</android.widget.LinearLayout>